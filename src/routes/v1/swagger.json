{
  "openapi": "3.0.3",
  "info": {
    "title": "express-4x-api-starter",
    "description": "A starter template for an Express 4.x API, now compliant with OpenAPI 3.0.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/v1",
      "description": "Development server"
    },
    {
      "url": "https://api.example.com/v1",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "data",
      "description": "Operations about master data"
    },
    {
      "name": "managing",
      "description": "Operations about managing master data"
    }
  ],
  "paths": {
    "/data": {
      "get": {
        "tags": [
          "data"
        ],
        "summary": "List all collections",
        "description": "Retrieves a list of all collections.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "A list of collections.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Collection"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No collections found"
          }
        }
      }
    },
    "/data/{collectionId}": {
      "get": {
        "tags": [
          "data"
        ],
        "summary": "Get a single collection",
        "description": "Retrieves a single collection by its ID.",
        "parameters": [
          {
            "name": "collectionId",
            "in": "path",
            "description": "The ID of the collection to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single collection.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Collection"
                }
              }
            }
          },
          "404": {
            "description": "Collection not found"
          }
        }
      }
    },
    "/manage/collections": {
      "get": {
        "tags": [
          "managing"
        ],
        "summary": "List all collections",
        "description": "Retrieves a list of all collections for management purposes.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "A list of collections.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Collection"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No collections found"
          }
        }
      },
      "post": {
        "tags": [
          "managing"
        ],
        "summary": "Create a new collection",
        "description": "Creates a new collection with the provided data.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewCollection"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Collection created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewCollection"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          }
        }
      }
    },
    "/manage/collections/{collectionId}": {
      "get": {
        "tags": [
          "managing"
        ],
        "summary": "Get a single collection",
        "description": "Retrieves a single collection by its ID.",
        "parameters": [
          {
            "name": "collectionId",
            "in": "path",
            "description": "The ID of the collection to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single collection.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Collection"
                }
              }
            }
          },
          "404": {
            "description": "Collection not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewCollection": {
        "type": "object",
        "required": [
          "name",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Sample Collection"
          },
          "path": {
            "type": "string",
            "example": "sample-collection",
            "description": "A unique path identifier for the collection."
          },
          "description": {
            "type": "string",
            "example": "This is a sample collection."
          }
        }
      },
      "Collection": {
        "type": "object",
        "required": [
          "id",
          "items"
        ],
        "properties": {
          "id": {
            "type": "string",
            "example": "1"
          },
          "items": {
            "type": "number",
            "example": 100
          }
        }
      }
    }
  }
}
